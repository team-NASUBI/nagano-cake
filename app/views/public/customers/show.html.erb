<h1>マイページ</h1>

<table>
  <tbody>
    <tr>
      <th><h2>登録情報</h2></th>
      <td><%= link_to "編集する", edit_customer_path(current_customer.id) %></td>
    </tr>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= full_name(@customer) %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= kana_full_name(@customer) %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th><h2>配送先</h2></th>
      <td><%= link_to "一覧を見る", shipping_addresses_path %></td>
    </tr>
    <tr>
      <th><h2>注文履歴</h2></th>
      <td><%= link_to "一覧を見る", orders_path %></td>
    </tr>
  </tbody>
</table>
