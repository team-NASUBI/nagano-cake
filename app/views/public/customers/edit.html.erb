
<div class="container customer_edit" style="min-height:500px">
  <div class="row m-4">
    <div class="col-12">

      <h5 class="d-inline bg-gray pr-3 pl-3">会員情報編集</h5>
      <% if @customer.errors.any? %>
        <p><%= @customer.errors.full_messages.count %>件のerror</p>
        <% @customer.errors.full_messages.each do |customer| %>
          <%= customer %><br>
        <% end %>
      <% end %>

      <%= form_with model:@customer, local:true do |f| %>
        <div class="form-group">
          <%= f.label :last_name, "名前", class: "col-3 mr-3" %>
          <%= f.text_field :last_name, placeholder: "令和", class: "col-2 form-ph" %>
          <%= f.text_field :first_name, placeholder: "道子", class: "col-2 form-ph" %>
        </div>

        <div class="form-group">
          <%= f.label :kana_last_name, "フリガナ", class: "col-3 mr-3" %>
          <%= f.text_field :kana_last_name, placeholder: "レイワ", class: "col-2 form-ph" %>
          <%= f.text_field :kana_first_name, placeholder: "ミチコ", class: "col-2 form-ph" %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号", class: "col-3 mr-3" %>
          <%= f.text_field :postal_code, placeholder: "0000000", class: "col-2 form-ph" %>
        </div>

        <div class="field" style="height:0;opacity:0">
          <%= f.label :prefecture_code %><br>
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", class: "col-3 mr-3" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-4 form-ph" %>
        </div>

        <div class="form-group">
          <%= f.label :telephone_number, "電話番号", class: "col-3 mr-3" %>
          <%= f.text_field :telephone_number, placeholder: "0000000000", class: "col-2 form-ph" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "col-3 mr-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-4 form-ph" %>
        </div>

        <div class="form-group">
          <%= f.submit "編集内容を保存", class: "btn btn-success col-3 mt-4 offset-md-2" %>
           <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger mt-4 offset-md-2" %>
        </div>


      <% end %>
    </div>

  </div>
</div>