<div class="row" style="padding:30px">
      <div class="col">
        <h5 class="d-inline bg-gray pr-3 pl-3"><%= genre_name %>一覧</h5>
<p>(全<%= products.count %>件)</p>
<%= form_with model: products, url: products_genre_path, method: :get, local: true do |f| %>
  <%= f.collection_select :id, genres, :id, :name, {prompt: "ジャンル検索"}, class: "form-control" %>
  <%= f.submit "検索" %>
<% end %>
<div class="product-boxs">
  <% products.each do |product| %>

    <dl class="product-box">
      <%= link_to product_path(product) do %>
        <div class="product-list">
          <div class="product">
            <div class="product-image">
              <%= attachment_image_tag product, :product_image, fallback: "no_image.png", size: '200x130' %>
            </div>
            <div class="product-name">
              <%= product.name %>
            </div>
            <div class="product-price">
              <%= number_to_currency(product.price, :format => "%u%n", :unit => "￥") %>
            </div>
          </div>
        </div>
      <% end %>
    </dl>
  <% end %>
</div>

<%= paginate products %>
</div>
</div>