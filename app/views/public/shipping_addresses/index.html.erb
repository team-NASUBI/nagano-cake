<h2>配送先登録/一覧</h2>
<% if @shipping_address.errors.any? %>
  <p><%= @shipping_address.errors.full_messages.count %>件のerror</p>
  <% @shipping_address.errors.full_messages.each do |shipping_address| %>
    <%= shipping_address %><br>
  <% end %>
<% end %>
<%= form_with model:@shipping_address, local:true do |f| %>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>
  
  <div class="field">
    <%= f.label :prefecture_code %><br>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
  </div>
  
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  
  <div class="field">
    <%= f.label :shipping_name, "宛名" %>
    <%= f.text_field :shipping_name, placeholder: "令和道子" %>
  </div>
  
  <div class="field">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.postal_code %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.shipping_name %></td>
        <td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id) %><%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>