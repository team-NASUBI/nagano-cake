<div class="container" style="min-height:550px;">
  <div class="row m-4">
    <div class="col">
      <h5 class="d-inline bg-gray pr-3 pl-3">ジャンル一覧・追加</h5>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @genre_new, url: admin_genres_path, local: true do |f| %>
        <p class="mb-5">ジャンル名 <%= f.text_field :name %> <%= f.submit '新規登録', class: "btn btn-success" %></p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <table class="table">
        <thead>
          <tr class="bg-gray">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>