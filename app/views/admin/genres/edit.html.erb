<div class="container" style="min-height:550px;">
  <div class="row m-4">
    <div class="col">
      <h5 class="d-inline bg-gray pr-3 pl-3 ">ジャンル編集</h5>
    </div>
  </div>
  <div class="row" style="min-height:400px">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
      <p>
        ジャンル名&emsp;
        <%= f.text_field :name %>&emsp;&emsp;
        <%= f.submit'変更を保存', class: 'btn btn-success' %>
      </p>
      <% end %>
    </div>
  </div>
</div>