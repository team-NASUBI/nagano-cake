<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3 ">会員一覧</h5>
  </div>
</div>
<div class="row m-4">
  <div class="col-sm-10 m-auto ">
    <table class="table table-hover">
      <thead>
        <tr class="bg-gray">
          <th >会員ID</th>
          <th >氏名</th>
          <th >メールアドレス</th>
          <th >ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to full_name(customer), admin_customer_path(customer), class: 'time_text' %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.withdrawal_status == false %>
              <p class="text-success">有効</p>
              <% else %>
              <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row m-4">
  <div class="col-sm-4 m-auto">
    <%= paginate @customers %>
  </div>
</div>
