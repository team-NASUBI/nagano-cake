<%= form_with model: order, url: admin_order_path(order), method: :patch, local: true do |f| %>
  <div id="form-order" class="d-flex flex-row">
    <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]}, {}, {class: 'form-control col-sm-2'} %>

  <span class= "col btnripple ">
    <%= f.submit "変更", class:'btn  btn-success' %>
  </span>

  </div>
<% end %>