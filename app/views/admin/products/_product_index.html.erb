<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3">商品一覧</h5>
   <div style="margin-top:20px">
      <%= link_to '商品の追加', new_admin_product_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 m-auto ">
    <table class="table table-hover">
      <thead>
        <tr class="bg-gray">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admin_product_path(product), class: 'time_text' %></td>
          <td><%= product.price.to_s(:delimited) %></td>
          <td><%= product.genre.name %></td>
          <td><% if product.now_on_sale == true %>販売中<% else %>販売停止中<% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
