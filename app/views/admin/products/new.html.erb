<div>
  <h1>商品新規登録</h1>
  <%= form_with model: @product, url: admin_products_path, local: true do |f| %>
  <table>
    <th>商品画像</th>
    <td><%= f.attachment_field :product_image, placeholder: "ファイルを選択" %></td>
    <th>商品名</th>
    <td><%= f.text_field :name %></td>
    <th>商品説明</th>
    <td><%= f.text_area :introduction %></td>
    <th>ジャンル</th>
    <td><%= f.select :genre_id, [["未分類", 1],["ケーキ", 2 ], ["プリン", 3], ["焼き菓子", 4], ["キャンディ", 5]], include_blank: "選択して下さい" %></td>
    <th>税抜き価格</th>
    <td><%= f.number_field :price %></td>
    <th>販売ステータス</th>
    <td><%= f.radio_button :now_on_sale, :true %>
        <%= f.label :now_on_sale, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :now_on_sale, :false %>
        <%= f.label :now_on_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %></td>
  </table>
  <p><%= f.submit'新規登録'%></p>
  <% end %>
</div>