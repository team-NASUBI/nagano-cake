<div>
  <h1>商品一覧</h1>
   <table>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @products.each do |product| %>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admin_product_path(product) %></td>
          <td><%= product.price.to_s(:delimited) %></td>
          <td><%= product.genre.name %></td>
          <td><% if product.now_on_sale == true %>販売中<% else %>販売停止中<% end %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
</div>