 
    <div class="row m-4">
      <div class="col">


        <h5 class="d-inline bg-gray pr-3 pl-3">商品一覧</h5>
        <div><%= link_to '商品の追加', new_admin_product_path %></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 m-auto ">
        <table class="table">
          <thead>
            <tr class="bg-gray">
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>

            <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= link_to product.name, admin_product_path(product) %></td>
              <td><%= product.price.to_s(:delimited) %></td>
              <td><%= product.genre.name %></td>
              <td><% if product.now_on_sale == true %>販売中<% else %>販売停止中<% end %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4 m-auto">
        <%= paginate @products %>
      </div>
      </div>
