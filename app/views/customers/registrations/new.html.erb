<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th>名前</th>
          <td><%= f.label :first_name, "(姓)" %></td>
          <td> <%= f.text_field :first_name, placeholder: "令和" %></td>
          <td><%= f.label :last_name, "(名)" %></td>
          <td><%= f.text_field :last_name, placeholder: "道子" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th>フリガナ</th>
          <td><%= f.label :kana_first_name, "セイ" %></td>
          <td><%= f.text_field :kana_first_name, placeholder: "レイワ" %></td>
          <td><%= f.label :kana_last_name, "メイ" %></td>
          <td><%= f.text_field :kana_last_name, placeholder: "ミチコ" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th><%= f.label :address, "住所" %></th>
          <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
          <td><%= f.text_field :telephone_number, placeholder: "0000000000" %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="field">
    <table>
      <tbody>
        <tr>
          <th><%= f.label :password, "パスワード(6文字以上)" %></th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="field">
    <table>
      <tbody>
        <tr>
          <th><%= f.label :password_confirmation, "パスワード確認用" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "customers/shared/links" %><span>からログインしてください。</span>
