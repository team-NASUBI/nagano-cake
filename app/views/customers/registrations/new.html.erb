<div class="container">
  <div class="row m-4">
    <div class="col">
      <h5 class="d-inline bg-gray pr-3 pl-3">新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :last_name, "名前　(姓)", class: "col-3 mr-3" %>
    <%= f.text_field :last_name, placeholder: "令和", class: "col-2 form-ph" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, placeholder: "道子", class: "col-2 form-ph" %>
  </div>

  <div class="form-group">
    <%= f.label :kana_last_name, "フリガナ　(セイ)", class: "col-3 mr-3" %>
    <%= f.text_field :kana_last_name, placeholder: "レイワ", class: "col-2 form-ph" %>
    <%= f.label :kana_first_name, "(メイ)" %>
    <%= f.text_field :kana_first_name, placeholder: "ミチコ", class: "col-2 form-ph" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス", class: "col-3 mr-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-2 form-ph" %>
  </div>

  <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 mr-3" %>
    <%= f.text_field :postal_code, placeholder: "0000000", class: "col-2 form-ph" %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所", class: "col-3 mr-3" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-4 form-ph" %>
  </div>

  <div class="form-group">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3 mr-3" %>
    <%= f.text_field :telephone_number, placeholder: "0000000000", class: "col-2 form-ph" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)", class: "col-3 mr-3" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-2 form-ph" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード確認用", class: "col-3 mr-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-2 form-ph" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success col-3 mt-4 offset-md-2"  %>
  </div>
<% end %>
</div>
</div>


<div class="row m-4">
    <div class="col">
 <h5 class="d-inline bg-gray pr-3 pl-3" >既に登録済みの方</h5>
 <div>
<%= render "customers/shared/links" %><span>からログインしてください。</span>

</div>
</div>
</div>
</div>